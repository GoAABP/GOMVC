<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - GOMVC</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/GOMVC.styles.css" asp-append-version="true" />
  <!-- Integración de Material Icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
  <!-- Layout principal con flex, para que el sidebar y el contenido compartan el alto -->
  <div class="layout-container">
    <!-- Sidebar con efecto glass y acento morado -->
    <nav class="sidebar">
      <div class="sidebar-header mb-4">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
          <span class="material-icons">home</span> GOMVC
        </a>
      </div>
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
            <span class="material-icons">dashboard</span> Home
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
            <span class="material-icons">security</span> Privacy
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link dropdown-toggle" href="#" id="defaultReportsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="material-icons">assignment</span> Default Reports
          </a>
          <ul class="dropdown-menu" aria-labelledby="defaultReportsDropdown">
            <li>
              <a class="dropdown-item" asp-area="" asp-controller="SaldosCartera" asp-action="Index">
                <span class="material-icons">account_balance_wallet</span> Saldos Cartera
              </a>
            </li>
            <li>
              <a class="dropdown-item" asp-area="" asp-controller="SaldosContables" asp-action="Index">
                <span class="material-icons">receipt_long</span> Saldos Contables
              </a>
            </li>
            <li>
              <a class="dropdown-item" asp-area="" asp-controller="AplicacionPagos" asp-action="Index">
                <span class="material-icons">payment</span> Aplicacion Pagos
              </a>
            </li>
            <li>
              <a class="dropdown-item" asp-area="" asp-controller="OtorgamientoCreditos" asp-action="Index">
                <span class="material-icons">credit_score</span> Otorgamiento Creditos
              </a>
            </li>
            <li>
              <a class="dropdown-item" asp-area="" asp-controller="Gestiones" asp-action="Index">
                <span class="material-icons">support_agent</span> Gestiones
              </a>
            </li>
          </ul>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-area="" asp-controller="LoadData" asp-action="Index">
            <span class="material-icons">cloud_upload</span> Load Data
          </a>
        </li>
      </ul>
      <!-- Botón de Logout al final del sidebar -->
      <div class="logout-container">
        <form asp-area="" asp-controller="User" asp-action="Logout" method="post">
          <button type="submit" class="btn btn-link nav-link">
            <span class="material-icons">logout</span> Logout
          </button>
        </form>
      </div>
    </nav>

    <!-- Contenido principal que utiliza flex para empujar el footer al final -->
    <div class="content">
      <main role="main">
        @RenderBody()
      </main>
      <footer class="footer">
        <div class="container">
          © 2024 - GOMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
      </footer>
    </div>
  </div>

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
