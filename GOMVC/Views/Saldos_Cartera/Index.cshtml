                        <th>nLiqIntTran</th>
                        <th>nLiqMorTran</th>
                        <th>nLiqChaTran</th>
                        <th>nLiqRetTran</th>
                        <th>vScoreBuro</th>
                        <th>vCollectStatus</th>
                        <th>nCAT</th>
                        <th>vOpTable</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.SaldosCartera)
                    {
                        <tr>
                            <td>@item.Id_Solicitud</td>
                            <td>@item.Id_Credito</td>
                            <td>@item.Id_Persona</td>
                            <td>@item.Referencia</td>
